/* pages/recommend/recommend.wxss */
@import "./recommend.skeleton.wxss";

.recommed-page {
  padding: 30rpx;
}

.recommed-page .swiper-box {
  width: 690rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.recommed-page .recommed-box {
  margin-bottom: 30rpx;
}

.recommed-page .recommed-box .recommed-img {
  width: 690rpx;
  height: 386rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.recommed-page .recommed-box .title-tag {
  margin: 10rpx 0;
  display: flex;
  align-items: center;
}

.recommed-page .recommed-box .title-tag .title {
  max-width: 556rpx;
  font-size: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
}

.recommed-page .recommed-box .title-tag .tag {
  margin-left: 10rpx;
  padding: 2rpx 8rpx;
  font-size: 24rpx;
  color: #90959b;
  border-radius: 6rpx;
  background-color: rgba(192, 192, 192, 0.16);
}

.recommed-page .recommed-box .chapter-comment {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.recommed-page .recommed-box .chapter-comment .comment {
  padding-left: 36rpx;
  background-repeat: no-repeat;
  background-position: left center;
  background-image: url(data:image/svg+xml;base64,);
}

