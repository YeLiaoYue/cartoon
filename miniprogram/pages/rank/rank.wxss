/* pages/rank/rank.wxss */
@import "./rank.skeleton.wxss";

.header-box {
  margin: 30rpx 0;
  padding: 0 40px;
  display: flex;
  justify-content: space-between;
}

.header-box .button {
  padding: 12rpx 32rpx;
  border-radius: 160rpx;
  color: #6c727e;
  background-color: #f5f7f8;
}

.header-box .active {
  color: #ff5f8c;
  background-color: rgba(255, 95, 140, 0.08);
}

.rank-list {
  padding: 0 30rpx;
}

.rank-list .list-box {
  margin-bottom: 20rpx;
  display: flex;
}

.rank-list .list-box .index {
  position: relative;
  top: -12rpx;
  width: 60rpx;
  text-align: right;
  font-size: 48rpx;
  font-weight: bold;
  color: #cf9870;
}

.rank-list .list-box:nth-child(-n+3) .index {
  position: relative;
  top: -25rpx;
  font-size: 100rpx;
}

.rank-list .list-box .img {
  width: 204rpx;
  height: 272rpx;
}

.rank-list .list-box .content {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.rank-list .list-box .content .title {
  width: 382rpx;
  font-size: 36rpx;
  overflow: hidden;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.rank-list .list-box .content .msg {
  width: 382rpx;
  font-size: 24rpx;
  color: #90959b;
}

.rank-list .list-box .content .msg .author {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
}

.rank-list .list-box .invariant,
.rank-list .list-box .rise,
.rank-list .list-box .decline {
  width: 60rpx;
  background-repeat: no-repeat;
  background-position: center bottom;
  background-size: 60rpx;
