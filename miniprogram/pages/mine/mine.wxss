/* pages/mine/mine.wxss */
.mine-page {
  width: 100vw;
  height: 100vh;
}

.userMsg {
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.userMsg .img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  border-radius: 50%;
  overflow: hidden;
}

.userMsg .quit {
  margin-left: auto;
  color: #999;
}

.change_user_name .title {
  padding: 30rpx 0 0 10rpx;
  height: 100rpx;
  font-weight: bold;
}

.change_user_name .user_name {
  padding: 10rpx;
  margin-bottom: 10rpx;
  border-bottom: 1px solid red;
}

.login_popup {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.login_popup .popup-box {
  width: 600rpx;
  background-color: #fff;
  border-radius: 15rpx;
}

.login_popup .popup-box .title {
  height: 100rpx;
  padding: 50rpx 15rpx 0;
}

.login_popup .popup-box .confirm_cancel {
  padding: 0 50rpx 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.login_popup .popup-box .confirm_cancel .button {
  width: 200rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid gray;
  border-radius: 10rpx;
}

.login_popup .popup-box .confirm_cancel .confirm {
  color: #fff;
  background-color: #096609;
}

.nav-header {
  padding: 0 30rpx;
  display: flex;
}

.nav-header .history {
  margin-left: 30rpx;
}

.nav-header .active {
  color: #ff5f8c;
}

.list-box {
  height: max-content;
  padding: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.list-box .hint {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
}

.list-box .list {
  flex-shrink: 0;
  position: relative;
  width: 210rpx;
  margin: 30rpx 30rpx 0 0;
}

.list-box .list:nth-child(3n) {
  margin-right: 0;
}

.list-box .list .delete-icon {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  padding-bottom: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: none;
  box-sizing: border-box;
}

.list-box .list .img {
  width: 100%;
  height: 280rpx;
  box-shadow: 0 0 8rpx gray;
}

.list-box .list .title {
  width: 100%;
  margin-top: 10rpx;
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
}

.list-box .list .history,
.list-box .list .total {
  font-size: 24rpx;
  color: #999;
}

.delete .list .delete-icon {
  display: flex;
}
